
<%- include('partials/header') %>

<div class="container w-75">
    <h1 class="mb-4 ml-4 mt-5">Users</h1>
</div>
<div class="container w-75">
    <ul class="list-group">
        <% users.forEach(user => { %>
          <li class="list-group-item bg-dark d-flex justify-content-between align-items-center">
            <span class="text-white">
              <strong><%= user.username %></strong> - <%= user.type %>
            </span>
            <div>
              <button onclick="promoteUser('<%= user.email %>')" class="btn btn-success btn-sm">Promote to Admin</button>
              <button onclick="demoteUser('<%= user.email %>')" class="btn btn-warning btn-sm">Demote</button>
            </div>
          </li>
        <% }) %>
      </ul>
      
</div>

<%- include('partials/footer') %>